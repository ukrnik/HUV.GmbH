{
    "$schema": "https://json.schemastore.org/prettierrc",
    "printWidth": 110,
    "useTabs": false,
    "tabWidth": 4,
    "semi": true,
    "singleQuote": true,
    "trailingComma": "es5",
    "bracketSpacing": true,
    "arrowParens": "always",
    "endOfLine": "lf",
    "htmlWhitespaceSensitivity": "ignore",
    "proseWrap": "preserve",
    "plugins": ["prettier-plugin-tailwindcss"],
    "overrides": [
        { "files": "*.css", "options": { "singleQuote": false } },
        { "files": "*.md", "options": { "proseWrap": "preserve" } }
    ]
}